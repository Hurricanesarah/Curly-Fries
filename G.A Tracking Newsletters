    <!-- 
      Google Analytics code. Please ensure this code is pasted right below the <body>
      tag and also make sure that the UA-XXXXXXXX-X has been changed accordingly.
    -->
    <script>
      (function(i,s,o,g,r,a,m){i['GoogleAnalyticsObject']=r;i[r]=i[r]||function(){
      (i[r].q=i[r].q||[]).push(arguments)},i[r].l=1*new Date();a=s.createElement(o),
      m=s.getElementsByTagName(o)[0];a.async=1;a.src=g;m.parentNode.insertBefore(a,m)
      })(window,document,'script','https://www.google-analytics.com/analytics.js','ga');

      ga('create', 'UA-XXXXXXXX-X', 'auto');
      ga('send', 'pageview');
    </script>
    
    <!-- 
      This code triggers an event on newsletter subscription submit click. 
      Please copy the onclick attribute & it's value and paste it into the 
      newsletter submit button in order to properly track it in GA.
    -->
    <button onclick="gaEventNewsletter()">Newsletter</button>

    <!-- 
      This code triggers an event on video play button click. 
      Please copy the onclick attribute & it's value and paste it into the 
      newsletter submit button in order to properly track it in GA.
    -->
    <button onclick="gaEventVideo()">Video</button>

    <!-- 
      This code triggers an event on gallery view button click. 
      Please copy the onclick attribute & it's value and paste it into the 
      gallery view button in order to properly track it in GA.
    -->
    <button onclick="gaEventGallery()">Gallery</button>

    <!-- 
      This code triggers an event on facebook share link click. 
      Please copy the onclick attribute & it's value and paste it into the 
      facebook share link in order to properly track it in GA.
    -->
    <a href="https://www.facebook.com" target="_blank" 
       onclick="gaEventSocialShare('facebook')">
       Facebook
    </a>

